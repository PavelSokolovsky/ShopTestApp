<Window x:Class="ShopTestApp.Views.Windows.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShopTestApp.Views.Windows"
        mc:Ignorable="d"
        Title="AuthWindow" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="Логин:"/>
            <TextBox x:Name="txtLogin" Width="200" Margin="0,5"/>

            <Label Content="Пароль:"/>
            <PasswordBox x:Name="txtPassword" Width="200" Margin="0,5"/>

            <Button Content="Войти" Width="100" Margin="0,10" Click="BtnLogin_Click"/>
        </StackPanel>
    </Grid>
</Window>
