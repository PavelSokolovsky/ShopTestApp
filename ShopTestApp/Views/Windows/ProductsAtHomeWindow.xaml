<Window x:Class="ShopTestApp.Views.Windows.ProductsAtHomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShopTestApp.Views.Windows"
        mc:Ignorable="d"
        Title="ProductsAtHomeWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Frame x:Name="frame" Grid.Row="0"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Мои продукты" Width="100" Margin="5" Name="MyProducts" Click="MyProducts_Click"/>
            <Button Content="Изменить запасы" Width="100" Margin="5" Name="ChangeAmount" Click="ChangeAmount_Click"/>
            <Button Content="Заказы" Width="100" Margin="5"/>
            <Button Content="Button 4" Width="100" Margin="5"/>
            <Button Content="Button 5" Width="100" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
